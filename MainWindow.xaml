<Window x:Class="TESTworkElcomplus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TESTworkElcomplus"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Grid>
        <Label x:Name="Label1" Content="После нажатия кнопки выполнится алгоритм поиска" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Width="360"/>
        <ListBox x:Name="Listbox1" d:ItemsSource="{d:SampleData ItemCount=5}"
        
        Margin="205,59,15,10" SelectedIndex="10" SelectionChanged="Listbox1_SelectionChanged"/>
        <Button Content="Click To Result" HorizontalAlignment="Left" Margin="35,59,0,0" VerticalAlignment="Top" Height="55" Width="145" Click="Button_Click"/>
        <Label x:Name="Label2" Content="Считанные файлы" HorizontalAlignment="Left" Margin="205,36,0,0" VerticalAlignment="Top" Width="165"/>

    </Grid>
</Window>
